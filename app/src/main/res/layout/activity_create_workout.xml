<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gymbuffapp.gymbuff.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:backgroundTint="#DDDDDD"
        android:id="@+id/relativeLayout2"
        android:background="#DDDDDD"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/logo2"
            android:id="@+id/imageView5"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout2"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/linearLayout8">

            <TextView
                android:text="@string/workout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="20sp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:layout_weight="0.02"
                android:textColor="#9D6599"
                android:textColorLink="#1E1225" />

            <FrameLayout
                android:layout_width="386dp"
                android:layout_height="12dp">

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="384dp"
                android:layout_height="wrap_content">

            </LinearLayout>

            <TextView
                android:text="Workout days:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="Choose what days you want to set this workout plan over! \n\nRemember that rest days are just as important as days in the gym!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="0.02"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <FrameLayout
                android:layout_width="386dp"
                android:layout_height="24dp"
                android:layout_marginTop="115dp">

                <TextView
                    android:text="Description (optional):"
                    android:layout_width="203dp"
                    android:layout_height="44dp"
                    android:id="@+id/textView8"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.69">

                <EditText
                    android:layout_width="194dp"
                    android:layout_height="149dp"
                    android:ems="10"
                    android:id="@+id/editText4"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:inputType="textMultiLine"
                    android:paddingBottom="90dp"
                    android:maxLength="200" />
            </FrameLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayoutRight"
            android:layout_below="@+id/editText3" >

            <CheckBox
                android:text="Monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="60dp"
                android:id="@+id/checkBox8"
                android:layout_alignEnd="@+id/checkBox11" />

            <CheckBox
                android:text="Wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox9"
                android:id="@+id/checkBox10" />

            <CheckBox
                android:text="Thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox10"
                android:layout_alignParentStart="true"
                android:id="@+id/checkBox11"
                android:layout_alignEnd="@+id/checkBox12" />

            <CheckBox
                android:text="Friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox11"
                android:layout_alignParentStart="true"
                android:id="@+id/checkBox12"
                android:layout_alignEnd="@+id/checkBox13" />

            <CheckBox
                android:text="Saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox13"
                android:layout_below="@+id/checkBox12"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/checkBox10" />

            <CheckBox
                android:text="Sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox13"
                android:layout_alignEnd="@+id/checkBox13"
                android:id="@+id/checkBox14"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:text="Tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox9"
                android:layout_below="@+id/checkBox8"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:backgroundTint="#BBB4fa"
                android:layout_marginBottom="21dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:onClick="buildWorkout"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textSize="14sp"
                android:text="Choose the level of experience you wish to design a workout for!"
                android:paddingTop="30dp"
                android:paddingRight="25dp"
                android:textAlignment="center"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/checkBox14"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/button"
                android:textColor="#BB1110"
                android:paddingLeft="5dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_below="@+id/checkBox14"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:maxLines="1"
                android:maxLength="32"
                android:id="@+id/workoutName"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="926dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/divider1"
        android:id="@+id/imageView10"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="38dp" />

</RelativeLayout>
